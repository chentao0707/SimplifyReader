<android.support.v7.widget.CardView
    android:id="@+id/list_item_videos_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/list_item_videos_card_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_videos_list_image_height"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/list_item_videos_card_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="bottom"
        android:padding="4dp"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/micro_text"/>

    <ImageButton
        android:id="@+id/list_item_videos_card_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_video_card_play"/>
</android.support.v7.widget.CardView>